@page "/wishlist"
@using OnlineShop_CourseSubmission_CS.Component
@using OnlineShop_CourseSubmission_CS.Components

<PageTitle>OnlineShop - Wishlist</PageTitle>

@foreach(Products pro in WishItem.WishList)
{
	<div class="cartItemsList">
		<div class="card">
			<a href="/product/@pro.Id">
				<div class="added-card">
					<img src=@pro.Image class="card-img-top" alt="products">
				</div>
			</a>
			<div class="card-body overflow-auto" style="height:300px">
				<h5 class="card-title">@pro.Title</h5>
				<p class="card-text">@pro.Description</p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">€@pro.Price</li>
			</ul>
			<div class="card-body d-flex justify-content-between">
				<button class="btn btn-secondary" @onclick="()=>ShoppingCart.AddToCart(pro.Id)">Add <span class="small-hidden">to cart</span> </button>
				<a class="btn btn-secondary" href="/allproducts">Back to Shop</a>
				<button class="btn btn-secondary" @onclick="()=>WishItem.Remove(pro.Id)">Remove</button>
			</div>
		</div>
	</div>
}

